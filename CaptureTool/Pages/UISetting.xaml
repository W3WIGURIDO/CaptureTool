<UserControl x:Class="CaptureTool.Pages.UISetting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CaptureTool.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock Text="UI設定" FontWeight="Bold" Margin="0,2,0,0"/>
        <TextBlock Text="メイン画面に表示する設定項目を選択します。"/>
        <CheckBox Content="キー設定" IsChecked="{Binding EnableViewKeyBind}"/>
        <CheckBox Content="キー設定表示" IsChecked="{Binding EnableViewKeyBindingViewer}"/>
        <CheckBox Content="保存形式設定" IsChecked="{Binding EnableViewSaveFormat}"/>
        <CheckBox Content="保存先設定" IsChecked="{Binding EnableViewSaveDir}"/>
        <CheckBox Content="オーバーレイ設定" IsChecked="{Binding EnableViewOverlay}"/>
        <CheckBox Content="キャプチャ設定" IsChecked="{Binding EnableViewCapture}"/>
        <CheckBox Content="その他設定" IsChecked="{Binding EnableViewOther}"/>

        <TextBlock Text="画面詳細設定" FontWeight="Bold" Margin="0,5,0,0"/>
        <CheckBox Content="ファイル名オプション例表示" IsChecked="{Binding EnableOptionFileNameOption}"/>
    </StackPanel>
</UserControl>
