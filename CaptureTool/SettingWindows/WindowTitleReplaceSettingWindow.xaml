<Window x:Class="CaptureTool.SettingWindows.WindowTitleReplaceSettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CaptureTool.SettingWindows"
        mc:Ignorable="d"
        Title="ウィンドウタイトル置換設定" Height="450" Width="480">
    <Grid>
        <ListView x:Name="wtrListv" ItemsSource="{Binding WindowTitleReplaceSettings}" HorizontalContentAlignment="Stretch" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListView.View>
                <GridView ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <GridViewColumn x:Name="pCol" Header="検索文字列" Width="160">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding pattern}" Width="140"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn x:Name="replaceCol" Header="置換文字列" Width="160">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding replacement}" Width="140"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn x:Name="regexCol" Header="正規表現" Width="60">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding isRegex}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn x:Name="deleteCol" Header="削除" Width="40">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button x:Name="deleteButton" Content="×" Foreground="Red" Click="deleteButton_Click"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="addButton" Content="追加" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,5,0" Click="addButton_Click"/>
    </Grid>
</Window>
